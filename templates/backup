                        <td>{{ snp.chromosome }}</td>
                        <td>{{ snp.grch38_start }}</td>
                        <td>
                            {% if snp.gene_name and snp.gene_name != "No Mapped Gene" %}
                                {% set genes = snp.gene_name.split() %}  {# Split multiple genes by space #}
